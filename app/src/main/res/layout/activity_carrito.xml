<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carrito">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/barraSuperior"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#6200EE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la empresa"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:background="@android:color/transparent"
            android:contentDescription="Carrito"
            app:srcCompat="@drawable/carritoandroid" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Iniciar Sesion" />
    </LinearLayout>

    <!-- Barra de productos -->
    <LinearLayout
        android:id="@+id/barraproductos"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="96dp"
        android:background="#24beef"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperior">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="PC"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pc_android" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="Altavoz"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/altavoz_android" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="Teclado"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/teclado_android" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="Componentes"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/componentes_android" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="Monitor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/monitor_android" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="Mouse"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mouse_android" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:background="@android:color/transparent"
            android:contentDescription="Laptop"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/laptop_android" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
