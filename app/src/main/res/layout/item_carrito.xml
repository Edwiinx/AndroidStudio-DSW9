<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/fondo_tarjeta"
    android:layout_margin="4dp"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_marginEnd="8dp"
        android:contentDescription="Imagen del producto" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2" />

        <TextView
            android:id="@+id/textPrecioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp">

        <ImageButton
            android:id="@+id/btnMenos"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_delete"
            android:contentDescription="Eliminar o disminuir" />

        <TextView
            android:id="@+id/textCantidad"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMas"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Aumentar cantidad" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btnEliminar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Eliminar producto"
        android:layout_marginStart="8dp" />
</LinearLayout>
